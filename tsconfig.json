{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM", "ScriptHost"],
    "module": "esnext",
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "camelCase": "dashes",
          "customMatcher": "\\.style\\.scss$"
        }
      }
    ],
    "rootDir": "./src",
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "tests/**/*.ts", "demo/**/*.ts"]
}
